---

<section class="relative mt-8 md:mt-0">
  <img
    class="absolute top-0 left-1/2 -translate-x-1/2 h-auto [width:_clamp(2rem,6vw,6rem)] z-10"
    src="/img/bento-info-modal-cards/fire.webp"
    alt="Icono de fuego"
  />

  <div class="folder-shape w-full h-full bg-[#FDE8E8]">
    <h3
      class="pt-8 xs:pt-10 sm:pt-10 md:pt-14 lg:pt-20 text-center text-[#EA2E39] [font-size:_clamp(1rem,4vw,4rem)]"
    >
      Trucos para petarlo
    </h3>
    <div
      class="grid grid-cols-3 gap-2 xs:gap-4 md:gap-6 xl:gap-8 p-2 xs:p-4 md:p-6 xl:p-8"
    >
      {
        TIPS.map(
          ({
            image,
            title,
            description,
            firstBgColor,
            secondBgColor,
            titleColor,
            descriptionColor,
          }) => (
            <article
              class="file-card w-full h-full p-2 md:p-4 lg:p-8 bg-[#FFB3B6] flex flex-col items-center justify-center"
              style={{
                background: `linear-gradient(to bottom right, ${firstBgColor} 0%, ${secondBgColor} 100%)`,
              }}
            >
              <img
                src={image}
                alt={`${title} Card`}
                class="pb-1 md:pb-4 h-auto [width:_clamp(2rem,6vw,6rem)]"
              />
              <h4
                class="[font-size:_clamp(0.75rem,2vw+0.1rem,2.5rem)]"
                style={{ color: titleColor }}
              >
                {title}
              </h4>
              <p
                class="[font-size:_clamp(0.65rem,2vw,1.5rem)] text-center py-2"
                style={{ color: descriptionColor }}
              >
                {description}
              </p>
            </article>
          )
        )
      }
    </div>
  </div>
</section>

